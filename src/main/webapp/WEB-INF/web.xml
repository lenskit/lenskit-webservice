<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">

	<display-name>LensKit</display-name>	
	<servlet>
		<servlet-name>rec-engine</servlet-name>
		<servlet-class>org.grouplens.lenskit.webapp.RecEngine</servlet-class>
		<init-param>
			<param-name>re-config-path</param-name>
			<param-value>${recommender.properties.path}</param-value>
		</init-param>
		<load-on-startup>0</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>rec-engine</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>
